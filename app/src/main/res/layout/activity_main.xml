<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ser"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_sort"
        android:layout_marginHorizontal="14dp"
        app:cardCornerRadius="43sp"
        android:layout_marginTop="10dp"
        app:cardElevation="8dp"
        tools:ignore="MissingConstraints">



        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_sort"
        android:layout_width="50dp"
        i
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/whiter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/card"
        tools:ignore="ContentDescription,MissingConstraints,SpeakableTextPresentCheck" />




    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="30dp"
        android:backgroundTint="@color/mol"
        android:contentDescription="@string/app_name"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="200dp"
        app:icon="@drawable/plus_24px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>